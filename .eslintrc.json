{
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"plugins": ["react", "prettier"],
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"prettier",
		"prettier/react"
	],
	"rules": {
		"prettier/prettier": "error",
		"linebreak-style": ["error", "unix"]
	}
}
